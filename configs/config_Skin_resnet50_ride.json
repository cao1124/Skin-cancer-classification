{
    "name": "Skin_ResNet50_RIDE",
    "n_gpu": 2,

    "arch": {
        "type": "ResNet50Model",
        "args": {
            "num_classes": 22,
            "reduce_dimension": true,
            "use_norm": true,
            "returns_feat": true,
            "num_experts": 9
        }
    },
    "data_loader": {
        "type": "iNaturalistDataLoader",
        "args":{
            "data_dir": "data/us_label_mask1/",
            "batch_size": 8,
            "shuffle": true,
            "num_workers": 8
        }
    },

    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "weight_decay": 2e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "RIDELoss",
        "args": {
            "reweight": true,
            "reweight_factor": 0.015,
            "reweight_epoch": 80
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 50,
            "eta_min": 0.0
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
