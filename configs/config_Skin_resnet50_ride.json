{
    "name": "Skin_ResNeXt50_RIDE-two",
    "n_gpu": 2,

    "arch": {
        "type": "ResNeXt50Model",
        "args": {
            "num_classes": 9,
            "reduce_dimension": true,
            "use_norm": true,
            "returns_feat": true,
            "num_experts": 9
        }
    },
    "data_loader": {
        "type": "iNaturalistDataLoader",
        "args":{
            "data_dir": "D:/PycharmProjects/data/skin_data/square/",
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 12
        }
    },

    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "weight_decay": 2e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "RIDELoss",
        "args": {
            "reweight": true,
            "reweight_factor": 0.015,
            "reweight_epoch": 240
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 150,
            "eta_min": 0.0
        }
    },
    "trainer": {
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
