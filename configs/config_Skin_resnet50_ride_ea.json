{
    "name": "Skin_iNaturalist_ResNet50",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet50EAModel",
        "args": {
            "num_classes": 22,
            "reduce_dimension": true,
            "num_experts": 9,
            "top_choices_num": 22,
            "use_norm": true,
            "pos_weight": 1e2
        }
    },
    "data_loader": {
        "type": "iNaturalistDataLoader",
        "args":{
            "data_dir": "data/us_img_crop/",
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 8,
            "balanced": false
        }
    },

    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "weight_decay": 5e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "loss": {
        "type": "CrossEntropyLoss"
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 5,
            "eta_min": 0.0
        }
    },
    "resume_state_dict_only": true,
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
